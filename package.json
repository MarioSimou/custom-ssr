{
  "name": "server-side-rendered-app-with-chokidar",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./src/server.tsx",
  "scripts": {
    "build:client": "esbuild --bundle --loader:.tsx=tsx --outdir=dist --jsx=automatic --jsx-dev ./src/client.tsx",
    "build:server": "esbuild --bundle --loader:.tsx=tsx --outdir=dist --out-extension:.js=.cjs --jsx=automatic --jsx-dev --platform=node ./src/server.tsx",
    "build:client:watch": "pnpm build:client --watch",
    "build:server:watch": "pnpm build:server --watch",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch",
    "start:server:dev": "node --watch ./dist/server.cjs ",
    "start:dev": "run-p build:client:watch build:server:watch start:server:dev typecheck:watch",
    "clean": "rm -rf ./dist 2>/dev/null"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "esbuild": "^0.17.10",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5"
  }
}
